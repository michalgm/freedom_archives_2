{
  "name": "freedom-archives-database",
  "description": "Freedom Archives database backend",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "main": "backend",
  "keywords": [
    "feathers"
  ],
  "workspaces": [
    "frontend"
  ],
  "author": {
    "name": "Greg",
    "email": "greg@primate.net"
  },
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 20.18.1"
  },
  "feathers": {
    "language": "js",
    "packager": "npm",
    "database": "postgresql",
    "framework": "express",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  },
  "type": "module",
  "directories": {
    "lib": "backend",
    "test": "test/",
    "config": "config/"
  },
  "scripts": {
    "eslint": "yarn eslint backend/. test/. --config .eslintrc.json",
    "dev": "LD_PRELOAD=${LD_PRELOAD:-}/usr/lib/x86_64-linux-gnu/libjemalloc.so yarn nodemon -d 1 -w config/ -w backend/ -w package.json backend/index.js",
    "start": "yarn concurrently -k \"yarn run dev\" \"cd ./frontend; yarn run start\"",
    "start:prod": "node backend/",
    "mocha": "NODE_ENV=test yarn mocha test/ --ignore '**/helpers/**' --recursive --parallel --exit",
    "test": "NODE_ENV=test yarn run migrate && yarn run mocha",
    "bundle:client": "yarn pack --pack-destination ./public",
    "migrate": "yarn knex migrate:latest",
    "migrate:prod": "NODE_ENV=production yarn knex migrate:latest",
    "migrate:make": "yarn knex migrate:make -x mjs"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@feathersjs/authentication": "^5.0.33",
    "@feathersjs/authentication-local": "^5.0.33",
    "@feathersjs/authentication-oauth": "^5.0.33",
    "@feathersjs/cli": "^5.0.33",
    "@feathersjs/configuration": "^5.0.33",
    "@feathersjs/errors": "^5.0.33",
    "@feathersjs/express": "^5.0.33",
    "@feathersjs/feathers": "^5.0.33",
    "@feathersjs/knex": "^5.0.34",
    "@feathersjs/schema": "^5.0.33",
    "@feathersjs/typebox": "^5.0.33",
    "@img/sharp-libvips-linux-x64": "https://raw.githubusercontent.com/michalgm/freedom_archives_2/master/sharp-libvips/img-sharp-libvips-linux-x64-1.1.0.tgz",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "helmet": "^8.0.0",
    "knex": "^3.1.0",
    "node-addon-api": "^8.3.1",
    "node-gyp": "^11.1.0",
    "pg": "^8.13.3",
    "pg-tsquery": "^8.4.2",
    "serve-favicon": "^2.5.0",
    "sharp": "0.34.2",
    "string-strip-html": "^13.4.12",
    "typescript": "^5.9.2",
    "winston": "^3.17.0",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.26.8",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.25.0",
    "@eslint/json": "^0.12.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "axios": "^1.8.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "mock-knex": "^0.4.13",
    "nodemon": "^3.1.9",
    "sinon": "^19.0.2",
    "typescript-eslint": "^8.30.1"
  },
  "msw": {
    "workerDirectory": [
      "frontend/public"
    ]
  },
  "overrides": {
    "@img/sharp-libvips-linux-x64": "https://raw.githubusercontent.com/michalgm/freedom_archives_2/master/sharp-libvips/img-sharp-libvips-linux-x64-1.1.0.tgz"
  }
}
